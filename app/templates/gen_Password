<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generate Password</title>
</head>
<body>
    <form action="/generate_password" method="post">
        <label for="total_length">Total Length:</label>
        <input type="number" id="total_length" name="total_length" required><br><br>

        <label for="min_length">Minimum Length:</label>
        <input type="number" id="min_length" name="min_length" required><br><br>

        <label for="min_numbers">Minimum Numbers:</label>
        <input type="number" id="min_numbers" name="min_numbers" required><br><br>

        <label for="min_special_chars">Minimum Special Characters:</label>
        <input type="number" id="min_special_chars" name="min_special_chars" required><br><br>

        <label for="special_chars">Special Characters:</label><br>
        <input type="checkbox" name="special_chars" value="!">!
        <input type="checkbox" name="special_chars" value="@">@
        <input type="checkbox" name="special_chars" value="#">#
        <input type="checkbox" name="special_chars" value="$">$
        <input type="checkbox" name="special_chars" value="%">%
        <!-- Add more checkboxes for other special characters as needed -->

        <br><br>
        <input type="checkbox" id="avoid_ambiguous" name="avoid_ambiguous">
        <label for="avoid_ambiguous">Avoid Ambiguous Characters</label><br><br>

        <input type="submit" value="Generate Password">
    </form>

    <!-- Add a paragraph element to display the generated password -->
    <p id="generated_password"></p>

    <script>
        // Fetch the generated password from the server's response and display it
        document.querySelector('form').addEventListener('submit', function(event) {
            event.preventDefault();
            const form = new FormData(event.target);
            fetch('/generate_password', {
                method: 'POST',
                body: form
            })
            .then(response => response.text())
            .then(data => {
                document.getElementById('generated_password').textContent = data;
            })
            .catch(error => console.error('Error:', error));
        });
    </script>
</body>
</html>
